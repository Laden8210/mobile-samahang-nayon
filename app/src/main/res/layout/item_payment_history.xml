<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="#FFFFFF"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Payment Reference Number -->
        <TextView
            android:id="@+id/tvPaymentReference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REF-20241116055746"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#6200EE" />

        <!-- Amount Paid -->
        <TextView
            android:id="@+id/tvPaymentAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount Paid: â‚±100.00"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="#333333" />

        <!-- Payment Type -->
        <TextView
            android:id="@+id/tvPaymentType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Type: Gcash"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="#333333" />

        <!-- Payment Date and Time -->
        <TextView
            android:id="@+id/tvPaymentDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: 2024-11-16, Time: 05:57:46"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:textColor="#777777" />

        <!-- Status -->
        <TextView
            android:id="@+id/tvPaymentStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Confirmed"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="#4CAF50" />

        <!-- Purpose -->
        <TextView
            android:id="@+id/tvPaymentPurpose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Purpose: Room Reservation"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:textColor="#555555" />

        <!-- Proof of Payment Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <!-- Upload Button -->
            <Button
                android:id="@+id/btnUploadProof"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Proof"
                android:layout_marginEnd="8dp" />

            <!-- Proof ImageView -->
            <ImageView
                android:id="@+id/imgProofOfPayment"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder"
            android:contentDescription="Proof of Payment" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
